<%- layout("/layouts/boilerplate") %>

<div class="row mt-5 d-flex justify-content-center">
    <div class="col-10 col-md-6 col-lg-4">

        <div class="p-4 rounded-4 shadow-sm border border-light-subtle bg-white classy-login">

            <h2 class="text-center mb-4 fw-bold text-uppercase text-secondary">
                Login
            </h2>

            <form action="/login" method="POST" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label fw-semibold">Username</label>
                    <input 
                        name="username" 
                        type="text" 
                        class="form-control form-control-lg rounded-3" 
                        required
                    >
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Enter a valid username!</div>
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label fw-semibold">Password</label>
                    <input 
                        name="password" 
                        type="password" 
                        class="form-control form-control-lg rounded-3" 
                        required
                    >
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Enter password!</div>
                </div>

                <button class="btn btn-danger w-100 py-2 fw-semibold rounded-3 shadow-sm">
                    Login
                </button>

            </form>
        </div>

    </div>
</div>

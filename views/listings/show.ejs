<%- layout("/layouts/boilerplate") %>

<div class="row justify-content-center mt-4">

  <!-- Title -->
  <div class="col-lg-8 text-center mb-3">
    <h3 class="fw-semibold">
      <%= listing.title %>
    </h3>
  </div>

  <!-- Listing Card -->
  <div class="col-lg-6 col-md-8 col-sm-12">
    <div class="card border-0 rounded-4 shadow-sm mb-4">

      <img src="<%= listing.image.url %>"
           class="card-img-top rounded-top-4"
           alt="listing-image"
           style="max-height: 420px; object-fit: cover;">

      <div class="card-body px-4 py-3">
        <p class="card-text mb-2 text-muted fst-italic">
          <% if (listing.owner) { %>
            <i>Owned by <b><%= listing.owner.username %></b></i>
          <% } else { %>
            <i>Owner not available</i>
          <% } %>
        </p>

        <p class="card-text mb-2">
          <%= listing.description %>
        </p>

        <p class="card-text fw-bold fs-5 mb-1">
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
        </p>

        <p class="card-text text-muted mb-0">
          <%= listing.location %>, <%= listing.country %>
        </p>
      </div>
    </div>
  </div>

  <hr class="col-lg-8 my-4">
  <!-- Edit / Delete -->
  <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
    <div class="col-lg-6 text-center mb-4">
      <a href="/listings/<%= listing._id %>/edit"
         class="btn btn-outline-dark me-2 px-4">
        Edit
      </a>

      <form method="POST"
            action="/listings/<%= listing._id %>?_method=DELETE"
            class="d-inline">
        <button class="btn btn-danger px-4">
          Delete
        </button>
      </form>
    </div>
  <% } %>

  <hr class="col-lg-8 my-4">

  <!-- Reviews Section -->
  <div class="col-lg-8">

    <% if (currUser) { %>
      <h4 class="fw-semibold mb-3">Leave a review</h4>

      <form method="POST"
            action="/listings/<%= listing._id %>/reviews"
            novalidate
            class="needs-validation bg-white p-4 rounded-4 shadow-sm mb-4">

        <div class="mb-3">
          <label class="form-label fw-medium">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate"
                   name="review[rating]" value="1" checked />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3">
          <label class="form-label fw-medium">Comments</label>
          <textarea name="review[comment]"
                    rows="4"
                    class="form-control rounded-3"
                    required></textarea>
          <div class="invalid-feedback">
            Please add a comment
          </div>
        </div>

        <button class="btn btn-dark px-4">
          Submit
        </button>
      </form>
    <% } %>

    <!-- All Reviews -->
    <h4 class="fw-semibold mb-3">All Reviews</h4>

    <div class="row g-3">
      <% for (review of listing.reviews) { %>
        <div class="col-md-6">
          <div class="card border-0 rounded-4 shadow-sm h-100">
            <div class="card-body">
              <h6 class="fw-semibold mb-1">
                <%= review.author.username %>
              </h6>

              <p class="starability-result mb-2"
                 data-rating="<%= review.rating %>"></p>

              <p class="card-text mb-3">
                <%= review.comment %>
              </p>

              <form method="POST"
                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                    <% if(currUser && review.author._id.equals(currUser._id)){ %>
                <button class="btn btn-sm btn-outline-dark">
                  Delete
                </button>
                <% } %>
              </form>
            </div>
          </div>
        </div>
      <% } %>
    </div>

  </div>
</div>


 


